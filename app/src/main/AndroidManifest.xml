<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="company.handsome.markappproject" >
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.permission.hardware.camera"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/mark48"
        android:label="Mark"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar" >
        <activity
            android:name=".MarkMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MarkActivity">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".MarkMainActivity"/>
        </activity>
        <activity android:name=".MarkSettingActivity"
            android:label="Setting"/>
        <activity android:name=".SelectCategoryActivity"/>
    </application>

</manifest>
